@using Business.ViewModels.User.Home
@model HomeIndexVM

<!-- main starts -->
<main>
	@if (Model.Sliders.Count != 0)
	{
		<section class="banner no-select">
			@for (int i = 0; i < Model.Sliders.Count; i++)
			{
				var slider = Model.Sliders[i];
				<div class="banner-page banner-page-@i" style="background-image: url('@Url.Content("~/assets/img/" + slider.Photo)');">
					<div class="caption caption-@i" data-aos="fade-up" data-aos-duration="2000">
						@slider.Title
					</div>
					<div class="auxilary-caption" data-aos="fade-up" data-aos-duration="2000">
						@slider.Subtitle
					</div>
					<div class="button" data-aos="fade-up" data-aos-duration="2000">
						Learn more
					</div>
				</div>
			}
			<div class="bullets">
				<div class="bullets">
					@for (int i = 0; i < Model.Sliders.Count; i++)
					{
						<div class="bullet bullet-@i @(i == 0 ? "selected" : "")"></div>
					}
				</div>
			</div>

			<div class="overlay">
			</div>
		</section>
	}
	<!-- vision section starts -->
	@if (Model.Vision.Count != 0)
	{
		<section class="vision no-select">
			<div class="container">
				@foreach (var vision in Model.Vision)
				{
					<div class="vision-top row  justify-content-center" data-aos="fade-up" data-aos-duration="2000">
						<div class="col-lg-10 text-center">
							<h2 class="sub-heading">@vision.SubHeader</h2>
							<h2 class="heading">@vision.Header</h2>
							<span class="description">
								@vision.Description
							</span>
						</div>
					</div>
					<div class="vision-bottom row justify-content-center">
						@foreach (var goal in vision.VisionGoals)
						{
							<div class="col-sm-12 col-md-6 col-lg-3">
								<div class="item" data-aos="fade-up" data-aos-duration="2000">
									<img src="~/assets/img/@goal.Photo" alt="" class="item-icon">
									<div class="item-content">
										<h5 class="title">@goal.Title</h5>
										<p class="item-text">
											@goal.Description
										</p>
									</div>
								</div>
							</div>
						}
					</div>
				}
			</div>
		</section>
	}
	<!-- vision section ends -->
