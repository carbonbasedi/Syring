@using Business.ViewModels.User.Cart
@model List<CartProductVM>

<!-- main starts -->
<main>
	<!-- main-frame section starts -->
	<section class="main-frame-2 no-select" style="background-image: url(assets/images/cart-frame.jpg);">
		<div class="main-frame-2-title">
			<div class="container">
				<div class="row text-center">
					<div class="col-md-12">
						<div class="main-frame-2-title-text custom-title-text">
							Cart
						</div>
					</div>
					<div class="col-md-12">
						<div class="main-frame-2-breadcrumb">
							Home / Cart
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>
	<!-- main-frame section ends -->
	<!-- product-table section starts -->
	<section class="product-table no-select">
		<div class="container">
			<table class="table table-striped">
				<thead>
					<tr>
						<th scope="col">Id</th>
						<th scope="col">Photo</th>
						<th scope="col">Title</th>
						<th scope="col">Count</th>
						<th scope="col">Stock Quantity</th>
						<th scope="col">Actions</th>
					</tr>
				</thead>
				<tbody>
					@foreach (var product in Model)
					{
						<tr data-id="@product.Id">
							<th>@product.Id</th>
							<td><img style="max-width: 200px;" src="~/assets/img/@product.Image" /></td>
							<td>@product.Title</td>
							<td>@product.Count</td>
							<td>@product.Stock</td>
							<td>
								<a id="increaseCount" class="btn btn-success text-black" data-id="@product.Id">+</a>
								<a id="decreaseCount" class="btn btn-danger text-black" data-id="@product.Id">-</a>
								<a id="removeProduct" class="btn btn-info text-black" data-id="@product.Id">Remove</a>
							</td>
						</tr>
					}
				</tbody>
			</table>
		</div>
	</section>
	<!-- product-table section ends -->


</main>
<!-- main ends -->
@section Scripts{
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>
	<script src="~/js/basket.js"></script>
}