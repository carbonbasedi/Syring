@using Business.ViewModels.Admin.PlanFeature
@model PlanFeatureListVM

<div class="card shadow mb-4">
	<div class="card-body">
		<h1 class="h3 mb-2 text-gray-800">Plan Feature</h1>
		<a class="btn btn-primary m-3" asp-action="create" asp-controller="planfeature">Create</a>
		<div class="table-responsive">
			<table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
				<thead>
					<tr>
						<th>Title</th>
						<th>Created At</th>
						<th>Modified At</th>
						<th>Actions</th>
					</tr>
				</thead>
				<tbody>
					@foreach (var feature in Model.PlanFeatures)
					{
						<tr>
							<td>@feature.Feature</td>
							<td>@feature.CreatedAt.ToString("dd.MM.yyyy HH:mm:ss")</td>
							<td>@feature.UpdatedAt?.ToString("dd.MM.yyyy HH:mm:ss")</td>
							<td>
								<a asp-action="update" asp-controller="planfeature" asp-route-id="@feature.Id" class="btn btn-primary">Update</a>
								<a onclick="return DeleteConfirmation()" asp-action="delete" asp-controller="planfeature" asp-route-id="@feature.Id" class="btn btn-danger">Delete</a>
							</td>
						</tr>
					}
				</tbody>
			</table>
		</div>
	</div>
</div>