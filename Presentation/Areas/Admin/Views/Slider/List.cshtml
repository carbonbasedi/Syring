@using Business.ViewModels.Admin.Slider
@model List<SliderListItemVM>

<!-- Begin Page Content -->
<div class="container-fluid">
	<!-- Page Heading -->
	<h1 class="h3 mb-2 text-gray-800">Slider</h1>
	<a class="btn btn-primary m-3" asp-action="create" asp-controller="slider">Create</a>
	<!-- DataTales Example -->
	<div class="card shadow mb-4">
		<div class="card-body">
			<div class="table-responsive">
				<table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
					<thead>
						<tr>
							<th>Title</th>
							<th>Photo</th>
							<th>Created At</th>
							<th>Modified At</th>
							<th>Actions</th>
						</tr>
					</thead>
					<tbody>
						@foreach (var slider in Model)
						{
							<tr>
								<td>@slider.Title</td>
								<td>
									<img class="w-25" src="~/assets/img/@slider.Photo">
								</td>
								<td>@slider.CreatedAt.ToString("dd.MM.yyyy HH:mm:ss")</td>
								<td>@slider.ModifiedAt?.ToString("dd.MM.yyyy HH:mm:ss")</td>
								<td>
									<a asp-action="update" asp-controller="slider" asp-route-id="@slider.Id" class="btn btn-primary">Update</a>
									<a onclick="return DeleteConfirmation()" asp-action="delete" asp-controller="slider" asp-route-id="@slider.Id" class="btn btn-danger">Delete</a>
								</td>
							</tr>
						}
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>
<!-- /.container-fluid -->