@using Business.ViewModels.Admin.Plan
@using Common.Constants;
@model PlanUpdateVM

<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Update Plan</h1>

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-body">
            <form asp-action="update" asp-controller="plan" method="post">
                <div class="form-group">
                    <label asp-for="Title"></label>
                    <input class="form-control" asp-for="Title">
                    <span asp-validation-for="Title"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Value"></label>
                    <input class="form-control" asp-for="Value">
                    <span asp-validation-for="Value"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SubTitle"></label>
                    <input type="number" class="form-control" asp-for="SubTitle">
                    <span asp-validation-for="SubTitle"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PriceUnit"></label>
                    <select class="form-control form-select" asp-for="PriceUnit" asp-items="Html.GetEnumSelectList<PriceUnit>()">
                        <option value="">-- Choose --</option>
                    </select>
                    <span asp-validation-for="Title"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Period"></label>
                    <select class="form-control form-select" asp-for="Period" asp-items="Html.GetEnumSelectList<Period>()">
                        <option value="">-- Choose --</option>
                    </select>
                    <span asp-validation-for="Title"></span>
                </div>
                <button type="submit" class="btn btn-primary">Update</button>

                @if (Model.PlanFeatures.Count == 0)
                {
                    <div class="table-responsive">
                        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>Title</th>
                                    <th>Created At</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var feature in Model.PlanFeatures)
                                {
                                    <tr>
                                        <td>@feature.Feature</td>
                                        <td>@feature.CreatedAt.ToString("dd.MM.yyyy HH:mm:ss")</td>
                                        <td>
                                            <a asp-action="update" asp-controller="planfeature" asp-route-id="@feature.Id" class="btn btn-primary">Update</a>
                                            <a asp-action="delete" asp-controller="planfeature" asp-route-id="@feature.Id" onclick="return DeleteConfirmation()" class="btn btn-danger">Delete</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }

            </form>
        </div>
    </div>

</div>