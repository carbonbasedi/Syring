@using Business.ViewModels.Admin.AboutUs
@model AboutUsUpdateVM

<!-- Begin Page Content -->
<div class="container-fluid">

	<!-- Page Heading -->
	<h1 class="h3 mb-2 text-gray-800">Update About Us</h1>

	<!-- DataTales Example -->
	<div class="card shadow mb-4">
		<div class="card-body">
			<form enctype="multipart/form-data" asp-action="update" asp-controller="aboutus" method="post">
				<div class="form-group">
					<label asp-for="SubHeader"></label>
					<input class="form-control" asp-for="SubHeader" />
					<span asp-validation-for="SubHeader"></span>
				</div>
				<div class="form-group">
					<label asp-for="Header"></label>
					<input class="form-control" asp-for="Header" />
					<span asp-validation-for="Header"></span>
				</div>
				<div class="form-group">
					<label asp-for="About"></label>
					<textarea class="form-control" asp-for="About"></textarea>
					<span asp-validation-for="About"></span>
				</div>
				<div class="form-group">
					<label asp-for="Description"></label>
					<textarea class="form-control" asp-for="Description"></textarea>
					<span asp-validation-for="Description"></span>
				</div>
				<div class="form-group">
					<label class="form-label" asp-for="NewSignatureImg"></label></br>
					<input type="file" class="form-label" asp-for="NewSignatureImg">
					<span asp-validation-for="NewSignatureImg"></span>
				</div>
				<div class="form-group">
					<label class="form-label" asp-for="NewPhotos"></label></br>
					<input type="file" multiple class="form-label" asp-for="NewPhotos">
					<span asp-validation-for="NewPhotos"></span>
				</div>
				<button type="submit" class="btn btn-primary">update</button>
				@if (Model.Photos is not null)
				{
					<div class="table-responsive">
						<table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
							<thead>
								<tr>
									<th>Photo</th>
									<th>Created At</th>
									<th>Actions</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var photo in Model.Photos)
								{
									<tr>
										<td>
											<img class="w-25" src="~/assets/img/@photo.Name">
										</td>
										<td>@photo.CreatedAt.ToString("dd.MM.yyyy HH:mm:ss")</td>
										<td>
											<a asp-action="setmain" asp-controller="aboutus" asp-route-id="@photo.Id" class="btn btn-info">Set as Main</a>
										</td>
									</tr>
								}
							</tbody>
						</table>
					</div>
				}
			</form>
		</div>
	</div>

</div>
<!-- /.container-fluid -->